    function validateSignUp(){

        var firstname = document.forms["signupform"]["userFirstname"].value;
        var lastname = document.forms["signupform"]["userLastname"].value;
        var email = document.forms["signupform"]["usersignUpEmail"].value;
        var username = document.forms["signupform"]["userName"].value;
        var password = document.forms["signupform"]["usersignUpPassword"].value;
        var repeatedpassword = document.forms["signupform"]["userrepeatPassword"].value;

        window.location = '/dashboard';
        return false;



    }

    function  resetPassword() {
        var email = document.forms["resetUserPassword"]["resetEmail"].value;
        if(email != "kp@gmail.com") {
            document.getElementById("resetError").innerHTML = "<p align='center' class='alert-danger' style='font-weight: bolder'> The email is not associated with a valid RiderTrack account. Please retry</p>";
        }
        else document.getElementById("resetError").innerHTML = "<p align='center' class='alert-success' style='font-weight: bolder'>Reset Link sent to email</p>";
        return false;
    }


</script>
<script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>
</body>
</html>